    <script>
        function test () {
            let section = document.getElementById("padre");
            let colention = section.querySelectorAll("input[type=text]")
            colention.forEach(element => {
                if(element.value.length == 0){
                    element.style.backgroundColor="red";
                }
                
            });
        }
    </script>
